<body>
    <h1>Admin Dashboard</h1>
    
    <table class="table">
        <thead>
            <tr>
                <th>Booking ID</th>
                <th>Member Name</th>
                <th>Package ID</th>
                <th>Package Title</th>
                <th>Name</th>
                <th>Email</th>
                <th>Country</th>
                <th>Phone</th>
                <th>Selected Date</th>
                <th>Selected Passengers</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <tr th:each="booking : ${bookings}">
                <td th:text="${booking.booking_id}"></td>
                <td th:text="${booking.member != null ? booking.member.name : 'N/A'}"></td>
                <td th:text="${booking.pkg != null ? booking.pkg.package_id : 'N/A'}"></td>
                <td th:text="${booking.pkg != null ? booking.pkg.title : 'N/A'}"></td>
                <td th:text="${booking.name}"></td>
                <td th:text="${booking.email}"></td>
                <td th:text="${booking.country}"></td>
                <td th:text="${booking.phone}"></td>
                <td th:text="${booking.selectedDate}"></td>
                <td th:text="${booking.selectedPassengers}"></td>
                <td th:text="${booking.status}"></td>
                <td>
                    <!-- Confirm button -->
                    <form th:action="@{/admin/bookings/{bookingId}/confirm(bookingId=${booking.booking_id})}" method="post" onsubmit="return disableButtonsAndSetStatus(this, ${booking.booking_id}, 0)">
                        <button type="submit" id="confirm-${booking.booking_id}" class="btn btn-success" th:disabled="${booking.status != 2}">Confirm</button>
                    </form>
                </td>
                <td>
                    <!-- Reject button -->
                    <form th:action="@{/admin/bookings/{bookingId}/reject(bookingId=${booking.booking_id})}" method="post" onsubmit="return disableButtonsAndSetStatus(this, ${booking.booking_id}, 1)">
                        <button type="submit" id="reject-${booking.booking_id}" class="btn btn-danger" th:disabled="${booking.status != 2}">Reject</button>
                    </form>
                </td>
                <td>
                    <!-- Display confirmation/rejection status -->
                    <span id="status-${booking.booking_id}" th:if="${booking.status == 0}" class="text-success">Confirmed</span>
                    <span id="status-${booking.booking_id}" th:if="${booking.status == 1}" class="text-danger">Rejected</span>
                    <span id="status-${booking.booking_id}" th:if="${booking.status == 2}" class="text-warning">Pending</span>
                </td>
            </tr>
        </tbody>
    </table>

    <script>
        function disableButtonsAndSetStatus(form, bookingId, status) {
            // Disable both buttons
            var confirmButton = document.getElementById('confirm-' + bookingId);
            var rejectButton = document.getElementById('reject-' + bookingId);
            confirmButton.disabled = true;
            rejectButton.disabled = true;

            // Update the status span
            var statusSpan = document.getElementById('status-' + bookingId);
            if (status === 0) {
                statusSpan.className = "text-success";
                statusSpan.textContent = "Confirmed";
            } else if (status === 1) {
                statusSpan.className = "text-danger";
                statusSpan.textContent = "Rejected";
            }

            return true;
        }
    </script>
</body>
