    <script>
        $(document).ready(function() {
        	$("#check-availability-btn").click(function(event) {
        	    event.preventDefault();

        	    var selectedDate = new Date($("#date").val());
        	    var selectedPassengers = $("#participants").val();
        	    var packagePrice = parseFloat($(".custom-bg").data("package-price"));
        	    var totalPrice = selectedPassengers * packagePrice;

        	    $("#selected-date").text(selectedDate.toDateString());
        	    $("#selected-passengers").text(selectedPassengers);
        	    $("#total-price").text(totalPrice.toFixed(2));

        	    var cancelDate = new Date(selectedDate);
        	    cancelDate.setDate(cancelDate.getDate() - 1);
        	    $("#cancel-date").text(cancelDate.toDateString());

        	    $("#hidden-date").val(selectedDate.toISOString().split('T')[0]);
        	    $("#hidden-passengers").val(selectedPassengers);
        	    $("#hidden-package-id").val();

        	    $("#details-section").show();
        	    $("#price-section").show();
        	});

        	$("#book-now-btn").click(function(event) {
        	    event.preventDefault();
        	    $("#booking-form-section").show();
        	});

        	$("#booking-form").submit(function(event) {
        	    alert("Booking form submitted!");
        	});

        });
    </script>

