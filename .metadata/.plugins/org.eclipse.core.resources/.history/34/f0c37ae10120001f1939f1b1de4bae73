  <form th:object="${member}" th:action="@{/member/save}" method="post" class="needs-validation" novalidate>
    <div>
      <label>Name</label>
      <input class="form-control" th:field="*{name}" type="text" aria-label="default input example" required minlength="5" maxlength="50">
      <div class="invalid-feedback">Please enter a valid Member name!</div>
      <p class="text-danger" th:if="${#fields.hasErrors('name')}" th:errors="*{name}"></p>
    </div>
    <div>
      <label>Username</label>
      <input class="form-control" th:field="*{username}" type="text" aria-label="default input example" required minlength="5" maxlength="50">
      <div class="invalid-feedback">Please enter a valid Username!</div>
      <p class="text-danger" th:if="${#fields.hasErrors('username')}" th:errors="*{username}"></p>
    </div>
    <div>
      <label>Password</label>
      <input class="form-control" th:field="*{password}" type="password" aria-label="default input example" required minlength="5" maxlength="255">
      <div class="invalid-feedback">Please enter a valid Password!</div>
      <p class="text-danger" th:if="${#fields.hasErrors('password')}" th:errors="*{password}"></p>
    </div>
    <div>
      <label>Email</label>
      <input class="form-control my-3" th:field="*{email}" type="email" aria-label="default input example" required>
      <div class="invalid-feedback">Please enter a valid Email!</div>
      <p class="text-danger" th:if="${#fields.hasErrors('email')}" th:errors="*{email}"></p>
    </div>
    <div>
      <label>Role</label>
      <select class="form-select" th:field="*{role}" required>
        <option value="">Choose one</option>
