<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">
<head>
    <meta charset="UTF-8">
    <title>Book Trip Package</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        function loadHotelsAndRestaurants() {
            var tripPackageId = $('#tripPackageId').val();
            if (tripPackageId) {
                $.get('/trip-packages/' + tripPackageId + '/hotels', function(data) {
                    $('#hotelSelect').html(data);
                });
                $.get('/trip-packages/' + tripPackageId + '/restaurants', function(data) {
                    $('#restaurantSelect').html(data);
                });
            }
        }

        $(document).ready(function() {
            $('#tripPackageId').change(loadHotelsAndRestaurants);
        });
    </script>
</head>
<body>
    <h2>Book Trip Package</h2>
    
    <form th:action="@{/trip-packages/book}" method="post">
        <!-- Select Trip Package -->
        <label>Select Trip Package:</label>
        <select id="tripPackageId" name="tripPackageId">
            <option th:each="tripPackage : ${tripPackages}"
                    th:value="${tripPackage.id}"
                    th:text="${tripPackage.name}"></option>
        </select>
        <br/>
        
        <!-- Select Hotel -->
        <label>Select Hotel:</label>
        <div id="hotelSelect">
            <!-- Options will be populated by Ajax -->
        </div>
        <br/>
        
        <!-- Select Restaurant -->
        <label>Select Restaurant:</label>
        <div id="restaurantSelect">
            <!-- Options will be populated by Ajax -->
        </div>
        <br/>
        
        <button type="submit">Book Trip Package</button>
    </form>
</body>
</html>
