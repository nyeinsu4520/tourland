package com.example.demo;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.validation.BindingResult;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;

import jakarta.validation.Valid;

@Controller
public class BookingController {

	
	@Autowired
    private BookingRepository bookingPackageRepo;
	
	
	@GetMapping("/booking")
	public String getBookingpackage(Model model) {
		List<Booking> bookingPackagelist=bookingPackageRepo.findAll();
        model.addAttribute("bookingPackagelist",bookingPackagelist);
		return "booking";
	}
	
	@GetMapping("/booking/package/add")
    public String addPackageBooking(Model model) {
        model.addAttribute("booking", new Booking());
        return "Add_packagebooking";
    }

	@PostMapping("/booking/package/save")
	public String savePackage(@Valid Booking booking,BindingResult bindingResult,Model model) {
	if(bindingResult.hasErrors()) {
		List<Booking> bookingpackagelist=bookingPackageRepo.findAll();
		model.addAttribute("bookingpackagelist",bookingpackagelist);
		return "Add_packagebooking";
	}
	return "redirect:/booking";
	}
}
