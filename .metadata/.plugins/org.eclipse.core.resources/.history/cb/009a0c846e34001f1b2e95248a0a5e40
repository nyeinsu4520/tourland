<body>
    <h2>Manage Availability of Hotels and Restaurants</h2>
    <form th:action="@{/admin/update-availability}" method="post">
        
        <h3>Available Hotels</h3>
        <ul>
            <li th:each="hotel : ${hotels}">
                <input type="checkbox" th:value="${hotel.id}" name="availableHotels" th:id="${'hotel_' + hotel.id}" th:checked="${hotel.availableForAdmin}">
                <label th:for="${'hotel_' + hotel.id}" th:text="${hotel.name}"></label>
                <img th:src="${hotel.imageUrl}" alt="Hotel Image" width="100">
            </li>
        </ul>
        
        <h3>Available Restaurants</h3>
        <ul>
            <li th:each="restaurant : ${restaurants}">
                <input type="checkbox" th:value="${restaurant.id}" name="availableRestaurants" th:id="${'restaurant_' + restaurant.id}" th:checked="${restaurant.availableForAdmin}">
                <label th:for="${'restaurant_' + restaurant.id}" th:text="${restaurant.name}"></label>
                <img th:src="${restaurant.imageUrl}" alt="Restaurant Image" width="100">
            </li>
        </ul>
        
        <input type="submit" value="Update Availability">
    </form>
