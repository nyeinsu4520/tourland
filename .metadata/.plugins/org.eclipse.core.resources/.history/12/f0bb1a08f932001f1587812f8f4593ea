    const unreadNotifications = 1; // Replace with actual unread notification count

    // Show or hide notification counter based on unread notifications
    if (unreadNotifications > 0) {
        $('.notification-counter').text(unreadNotifications).show();
    } else {
        $('.notification-counter').hide();
