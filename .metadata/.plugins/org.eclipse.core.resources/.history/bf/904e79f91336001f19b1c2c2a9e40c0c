<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">
<head>
    <meta charset="UTF-8">
    <title>Book Trip Package</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        function loadHotelsAndRestaurants() {
            var tripPackageId = $('#tripPackageId').val();
            if (tripPackageId) {
                $.get('/admin/trip-packages/' + tripPackageId + '/hotels', function(data) {
                    $('#hotelSelect').html(data);
                });
                $.get('/admin/trip-packages/' + tripPackageId + '/restaurants', function(data) {
                    $('#restaurantSelect').html(data);
                });
            } else {
                $('#hotelSelect').html('<select name="hotelId"><option value="">-- Select a Trip Package First --</option></select>');
                $('#restaurantSelect').html('<select name="restaurantId"><option value="">-- Select a Trip Package First --</option></select>');
            }
        }

        $(document).ready(function() {
            loadHotelsAndRestaurants();

            $('#tripPackageId').change(loadHotelsAndRestaurants);

            // Ensure CSRF token is included in AJAX requests
            $.ajaxSetup({
                beforeSend: function(xhr) {
                    xhr.setRequestHeader('X-CSRF-Token', $('input[name="_csrf"]').val());
                }
            });
        });
    </script>
</head>
<body>
    <h2>Book Trip Package</h2>
    
    <form action="/admin/trip-packages/book" method="post">
        <input type="hidden" name="_csrf" th:value="${_csrf.token}" /> <!-- Ensure CSRF token is included -->
        
        <!-- Select Trip Package -->
        <label>Select Trip Package:</label>
        <select id="tripPackageId" name="tripPackageId">
            <option value="">-- Select Trip Package --</option>
            <option th:each="tripPackage : ${tripPackages}"
                    th:value="${tripPackage.id}"
                    th:text="${tripPackage.name}"></option>
        </select>
        <br/>
        
        <!-- Hotel Select Fragment -->
        <div id="hotelSelect">
            <select name="hotelId">
                <option value="">-- Select a Trip Package First --</option>
            </select>
        </div>
        <br/>
        
        <!-- Restaurant Select Fragment -->
        <div id="restaurantSelect">
            <select name="restaurantId">
                <option value="">-- Select a Trip Package First --</option>
            </select>
        </div>
        <br/>
        
        <button type="submit">Book Trip Package</button>
    </form>
</body>
</html>
