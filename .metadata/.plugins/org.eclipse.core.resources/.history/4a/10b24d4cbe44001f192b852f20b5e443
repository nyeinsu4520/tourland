<script>
document.addEventListener('DOMContentLoaded', function() {
    // Hide the booking form initially
    document.getElementById('booking-form-section').style.display = 'none';

    // Check availability button click event
    document.getElementById('check-availability-btn').addEventListener('click', function() {
        const dateInput = document.getElementById('date');
        const participantsInput = document.getElementById('participants');
        const selectedDate = dateInput.value;
        const selectedPassengers = participantsInput.value;
        const price = document.querySelector('.custom-bg').getAttribute('data-package-price');
        const totalPrice = selectedPassengers * price;

        // Calculate the cancel date by adding one day to the selected date
        const selectedDateObj = new Date(selectedDate);
        const cancelDateObj = new Date(selectedDateObj);
        cancelDateObj.setDate(selectedDateObj.getDate() + 1);
        const cancelDateString = cancelDateObj.toISOString().split('T')[0];

        // Update the details section
        document.getElementById('selected-date').innerText = selectedDate;
        document.getElementById('cancel-date').innerText = cancelDateString;
        document.getElementById('selected-passengers').innerText = selectedPassengers;
        document.getElementById('total-price').innerText = totalPrice.toFixed(2);

        // Set hidden form fields
        document.getElementById('hidden-date').value = selectedDate;
        document.getElementById('hidden-passengers').value = selectedPassengers;
        document.getElementById('hidden-package-id').value = document.querySelector('.custom-bg').getAttribute('data-package-id');

        // Show the details and price section
        document.getElementById('details-section').style.display = 'block';
        document.getElementById('price-section').style.display = 'block';
    });

    // Book now button click event
    document.getElementById('book-now-btn').addEventListener('click', function() {
        document.getElementById('booking-form-section').style.display = 'block';
    });

    // Submit booking button click event
    document.getElementById('submit-book-btn').addEventListener('click', function() {
        // You can add further validation or submission logic here if needed
        document.getElementById('booking-form').submit();
    });
});

</script>

