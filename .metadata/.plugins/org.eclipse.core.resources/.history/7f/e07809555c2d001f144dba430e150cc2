    <script>
        $(document).ready(function() {
            $("#check-availability-btn").click(function(event) {
                // Prevent the default button click behavior
                event.preventDefault();

                // Retrieve selected data
                var selectedDate = new Date($("#date").val());
                var selectedPassengers = $("#participants").val();
                var packagePrice = $('.custom-bg').data('package-price');
                
                // Calculate total price
                var totalPrice = selectedPassengers * packagePrice;

                // Subtract one day from the selected date
                var cancelDate = new Date(selectedDate);
                cancelDate.setDate(cancelDate.getDate() - 1);

                // Format cancel date as "Month day, year"
                var cancelDateFormatted = cancelDate.toLocaleDateString('en-US', {
                    month: 'long',
                    day: 'numeric',
                    year: 'numeric'
                });

                // Display selected data
                $("#selected-date").text(selectedDate.toLocaleDateString('en-US', {
                    month: 'long',
                    day: 'numeric',
                    year: 'numeric'
                }));
                $("#cancel-date").text(cancelDateFormatted);
                $("#selected-passengers").text(selectedPassengers);
                $("#total-price").text(totalPrice.toFixed(2));  // Format price to 2 decimal places

                // Show hidden sections
                $("#details-section").show();
                $("#price-section").show();
            });
        });
    </script>
