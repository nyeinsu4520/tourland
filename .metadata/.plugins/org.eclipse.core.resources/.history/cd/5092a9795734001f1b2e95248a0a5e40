package com.example.demo;

import java.util.Date;
import java.util.List;

import jakarta.persistence.*;

@Entity
public class TripPackage {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private int id;

    private String name;
    private String description;
    private Date startDate;
    private Date endDate;

    @OneToMany(mappedBy = "tripPackage", cascade = CascadeType.ALL)
    private List<HotelSelection> selectedHotels;

    @OneToMany(mappedBy = "tripPackage", cascade = CascadeType.ALL)
    private List<RestaurantSelection> selectedRestaurants;

    // Constructors, getters, and setters

    public TripPackage() {}

    public TripPackage(String name, String description, Date startDate, Date endDate) {
        this.name = name;
        this.description = description;
        this.startDate = startDate;
        this.endDate = endDate;
    }

    // Getters and setters

    public int getId() {
        return id;
    }

    public void setId(int id) {
        this.id = id;
    }

    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }

    public String getDescription() {
        return description;
    }

    public void setDescription(String description) {
        this.description = description;
    }

    public Date getStartDate() {
        return startDate;
    }

    public void setStartDate(Date startDate) {
        this.startDate = startDate;
    }

    public Date getEndDate() {
        return endDate;
    }

    public void setEndDate(Date endDate) {
        this.endDate = endDate;
    }

    public List<HotelSelection> getSelectedHotels() {
        return selectedHotels;
    }

    public void setSelectedHotels(List<HotelSelection> selectedHotels) {
        this.selectedHotels = selectedHotels;
    }

    public List<RestaurantSelection> getSelectedRestaurants() {
        return selectedRestaurants;
    }

    public void setSelectedRestaurants(List<RestaurantSelection> selectedRestaurants) {
        this.selectedRestaurants = selectedRestaurants;
    }
}
