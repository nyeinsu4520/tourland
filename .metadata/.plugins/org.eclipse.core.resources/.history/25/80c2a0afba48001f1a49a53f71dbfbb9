<head>
    <meta charset="UTF-8">
    <title>View Hotels</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
      <!-- Favicon -->
    <link rel="icon" href="img/tourland2.png" type="image/png" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">

    <!-- Font Awesome CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />
    <style>
        .star {
            color: gold;
        }
        .star.empty {
            color: lightgray;
        }
        .card {
            margin-bottom: 20px;
        }
        .card-img-top {
            height: 200px;
            object-fit: cover;
        }
    </style>
</head>
<body>

    <div th:replace="@{Fragment/header}"></div>

    <div class="container mt-4">
        <h3>View Hotels</h3>
        <!-- Display success or error message here if needed -->
        <div class="alert alert-primary" role="alert" th:if="${primary}" th:text="${primary}"></div>

        <div class="form-group">
            <label for="sortSelect">Sort By:</label>
            <select id="sortSelect" class="form-control" onchange="sortCards()">
                <option value="titleAsc">Title (A-Z)</option>
                <option value="titleDesc">Title (Z-A)</option>
                <option value="ratingDesc">Rating (High to Low)</option>
                <option value="ratingAsc">Rating (Low to High)</option>
            </select>
        </div>

        <div class="row" id="cardsContainer">
            <!-- Loop through each hotel card, initially sorted by title ascending -->
            <div th:each="card : ${cardList}" class="col-md-4" th:data-title="${card.title}" th:data-rating="${card.averageRating}">
                <div class="card">
                    <!-- Hotel image -->
                    <img th:src="@{/uploads/cards/{id}/{imageName}(id=${card.hotel_id},imageName=${card.image})}" alt="Card Image" class="card-img-top">
                    <div class="card-body">
                        <!-- Hotel title -->
                        <h5 class="card-title" th:text="${card.title}"></h5>
                        <!-- Hotel description -->
                        <p class="card-text" th:text="${card.description}"></p>
                        <!-- Room types -->
                        <ul>
                            <li th:each="roomType : ${card.roomTypes}" th:text="${roomType.type} + ' - ' + ${roomType.price}"></li>
                        </ul>
                        <!-- Hotel rating -->
                        <p>Rating: 
                            <span th:each="star : ${#numbers.sequence(1, 5)}"
                                  th:classappend="${star <= card.averageRating} ? 'star' : 'star empty'">&#9733;</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div th:replace="@{Fragment/footer}"></div>

    <!-- Bootstrap and jQuery JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        function sortCards() {
            var container = document.getElementById('cardsContainer');
            var cards = Array.prototype.slice.call(container.getElementsByClassName('col-md-4'));
            var sortBy = document.getElementById('sortSelect').value;

            cards.sort(function(a, b) {
                var titleA = a.getAttribute('data-title').toLowerCase();
                var titleB = b.getAttribute('data-title').toLowerCase();
                var ratingA = parseFloat(a.getAttribute('data-rating'));
                var ratingB = parseFloat(b.getAttribute('data-rating'));

                switch (sortBy) {
                    case 'titleAsc':
                        return titleA.localeCompare(titleB);
                    case 'titleDesc':
                        return titleB.localeCompare(titleA);
                    case 'ratingDesc':
                        return ratingB - ratingA;
                    case 'ratingAsc':
                        return ratingA - ratingB;
                }
            });

            cards.forEach(function(card) {
                container.appendChild(card); // Reattach cards in the new order
            });
        }

        document.addEventListener('DOMContentLoaded', function() {
            sortCards(); // Initial sort by title ascending
        });
    </script>
</body>
</html>
